@page "{id:int?}"
@model AddressManager.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.User?.Id">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Addresses)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Number</th>
                    <th>Zip Code</th>
                    <th>Street Address</th>
                    <th>Detail</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.User.Addresses)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zipcode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address2)
                        </td>
                        <td>
                            @{
                                String EditLink = "/Users/Addresses/Edit/" + item.UserId + "/" + item.Id;
                                String DeleteLink = "/Users/Addresses/Delete/" + item.UserId + "/" + item.Id;
                            }
                            <a href="@EditLink">Edit</a>
                            <a href="@DeleteLink">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="/Users/Addresses/AddAddress" asp-route-id="@Model.User?.Id">Add Address</a> 
</div>


